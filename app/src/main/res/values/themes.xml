<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordNotification" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
    </style>


    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">25dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>